<IfModule mod_rewrite.c>
  RewriteEngine On

  # Redirecionar www para não-www
  RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
  RewriteRule ^(.*)$ https://findspot.site/$1 [L,R=301]

  # Se o arquivo ou diretório não existir
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d

  # Se for requisição para a API, deixa passar para o index.php
  RewriteCond %{REQUEST_URI} ^/api/
  RewriteRule ^ index.php [QSA,L]

  # Senão, redireciona para index.html (React SPA)
  RewriteRule ^ index.html [L]
</IfModule>
